# state.py
# State representation for BIT* (2D)

import math

class State(object):
    def __init__(self, x, y):
        # Store coordinates
        self.x = float(x)
        self.y = float(y)

    def as_tuple(self):
        """Return (x, y) for printing or logging."""
        return (self.x, self.y)

    def __repr__(self):
        return "State(x=%s, y=%s)" % (self.x, self.y)


def distance(a, b):
    """Euclidean distance between two states."""
    dx = a.x - b.x
    dy = a.y - b.y
    return math.sqrt(dx * dx + dy * dy)

